package = org.jetbrains.skiko.skia.native
language = C++
compilerOpts.osx = -x c++ -std=c++14

headers = include/core/SkCanvas.h include/core/SkData.h include/core/SkImage.h include/core/SkStream.h include/core/SkSurface.h include/core/SkPaint.h include/core/SkImageInfo.h include/core/SkColor.h
headerFilter =  include/core/SkData.h include/core/SkImage.h include/core/SkStream.h include/core/SkSurface.h include/core/SkPaint.h include/core/SkCanvas.h include/core/SkImageInfo.h include/core/SkColor.h

# const overloads are not supported yet
excludedFunctions = saveLayer mapRect ptr

linkerOpts.osx = -framework CoreServices -framework CoreText -framework CoreGraphics -framework Metal
